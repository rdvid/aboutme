---
import Header from "../components/header.astro"
import Footer from "../components/footer.astro"
import Sidebar from "../components/sidebar.astro"
import { getLangFromUrl } from "../utils/utils";

const lang = getLangFromUrl(Astro.url);

---

<html lang={lang == 'br' ? 'pt-br' : lang} data-theme="lofi" class="min-h-full relative overflow-x-hidden">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@6.11.0/css/flag-icons.min.css"/>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"/>
		<meta name="generator" content={Astro.generator} />
		<script src="https://kit.fontawesome.com/6b3a9e549b.js" crossorigin="anonymous" defer></script>
		<title>< rdvid /></title>
	</head>

	<body class="flex flex-col min-w-screen max-sm:h-fit h-screen" onload="typeWriter()">
        <Header />
        <div class="flex flex-col lg:flex-row h-4/5 align-center bg-base-100">
            <Sidebar />
            <div class="w-full h-fit bg-base-100 lg:p-8 md:h-full md:border-2 md:border-black">
                <slot />
            </div>
        </div>   
        <Footer />
	</body>
    
</html>
