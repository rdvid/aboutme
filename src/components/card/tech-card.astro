---
import {Icon} from 'astro-icon/components';

type Props = {
    name: string;
    bgHexColor?: string;
    iconHexColor?: string;
}

const {
    name,
    bgHexColor,
    iconHexColor
} = Astro.props;
---

<div class='max-w-sm rounded-xl overflow-hidden shadow-lg w-fit cursor-pointer' 
    style={`background-color:#${bgHexColor}`}>
        <div class="w-16 m-16">
            <Icon name={name} height={64} width={64} color={'#'+iconHexColor}/>
            <h2 class="pt-5 text-center font-bold">{name[0].toUpperCase() + name.substring(1)}</h2>
        </div>    
</div>